<fieldset>
	<legend>{{localize "GURPS.Action.AttackMelee.DetailsLegend"}}</legend>

	<!-- Notes -->
	{{formField fields.notes value=source.notes localize=true editable=editable replacements=replacements}}

	<!-- Parry -->
	<div class="form-group">
		<label>
			<!-- Can Parry? -->
			{{formInput fields.parry.fields.canParry value=source.parry.canParry editable=editable}}
			<!-- Label -->
			{{localize "GURPS.Action.AttackMelee.FIELDS.Parry.Name"}}
		</label>
		<div class="form-fields">
			<!-- Modifier -->
			{{formInput fields.parry.fields.modifier value=source.parry.modifier disabled=(not source.parry.canParry)
			editable=editable}}

			<!-- Fencing -->
			<label>
				<!-- Checkbox-->
				{{formInput fields.parry.fields.fencing value=source.parry.fencing disabled=(not
				source.parry.canParry)}}
				<!-- Label -->
				{{localize "GURPS.Action.AttackMelee.FIELDS.Parry.Fencing"}}
			</label>
			<!-- Unbalanced -->
			<label>
				<!-- Checkbox-->
				{{formInput fields.parry.fields.unbalanced value=source.parry.unbalanced disabled=(not
				source.parry.canParry)}}
				<!-- Label -->
				{{localize "GURPS.Action.AttackMelee.FIELDS.Parry.Unbalanced"}}
			</label>
		</div>
	</div>

	<hr />

	<!-- Block -->
	<div class="form-group">
		<label>
			<!-- Can Block? -->
			{{formInput fields.block.fields.canBlock value=source.block.canBlock editable=editable}}
			<!-- Label -->
			{{localize "GURPS.Action.AttackMelee.FIELDS.Block.Name"}}
		</label>
		<div class="form-fields">
			<!-- Modifier -->
			{{formInput fields.block.fields.modifier value=source.block.modifier disabled=(not source.block.canBlock)
			editable=editable}}
		</div>
	</div>

	<hr />

	{{> "gurps.fields-attack-damage"}}

	<!-- Minimum ST -->
	<div class="form-group">
		<label>{{localize "GURPS.Action.BaseAttack.FIELDS.Strength.Name"}}</label>
		<div class="form-fields">
			{{formInput fields.strength.fields.min value=source.strength.min editable=editable}}

			<label>
				<!-- Two-Handed -->
				{{formInput fields.strength.fields.twoHanded value=source.strength.twoHanded editable=editable}}
				<!-- Label -->
				{{localize "GURPS.Action.BaseAttack.FIELDS.Strength.TwoHanded"}}
			</label>

			<label>
				<!-- Two-Handed & Unready -->
				{{formInput fields.strength.fields.twoHandedUnready value=source.strength.twoHandedUnready
				editable=editable}}
				<!-- Label -->
				{{localize "GURPS.Action.BaseAttack.FIELDS.Strength.TwoHandedUnready"}}
			</label>
		</div>
	</div>
</fieldset>
