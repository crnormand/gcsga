<li class="feature">
    <div class="top">
        <a class="button gcs-trash"
           data-action="remove-feature"
           data-index="{{@index}}"></a>
        <select class="type"
                name="array.system.features.{{@index}}.type"
                data-index="{{@index}}">
            {{#select this.type}}
            {{#each @root.config.select.feature_strict as |v k| }}
                <option value="{{ k }}">{{ localize v }}</option>
            {{/each}}
            {{#if (eq @root.item.type "equipment_container") }}
                {{#each @rootconfig.select.feature as |v k| }}
                    <option value="{{ k }}">{{ localize v }}</option>
                {{/each}}
            {{/if}} {{/select}}
        </select>
        <div class="field">
            <input type="text"
                   name="array.system.features.{{@index}}.amount"
                   value="{{ signed this.amount false }}"
                   data-dtype="Number" />
        </div>
        <label class="check">
            <input type="checkbox" data-dtype="Boolean" name="array.system.features.{{@index}}.leveled" {{ checked this.leveled }} />
            {{ localize "gurps.feature.per_level" }}
        </label>
        {{#if (eq this.type "weapon_bonus")}}
            <label class="check">
                <input type="checkbox" data-dtype="Boolean" name="array.system.features.{{@index}}.per_die" {{ checked this.per_die }} />
                {{ localize "gurps.feature.per_die" }}
            </label>
            <label class="check">
                <input type="checkbox" data-dtype="Boolean" name="array.system.features.{{@index}}.percent" {{ checked this.percent }} />
                {{ localize "gurps.feature.percent" }}
            </label>
        {{/if}}
    </div>
    <div class="field-3">
        <div class="placeholder"></div>
        <select name="array.system.features.{{@index}}.selection_type">
            {{#select this.selection_type}}
            {{#each @root.config.select.wsel as |v k| }}
                <option value="{{ k }}">{{ localize v }}</option>
            {{/each}} {{/select}}
        </select>
        <select name="array.system.features.{{@index}}.name.compare" {{ disabled (eq this.selection_type "this_weapon" ) }}>
            {{#select this.name.compare}}
            {{#each @root.config.select.string_criteria as |v k| }}
                <option value="{{ k }}">{{ localize v }}</option>
            {{/each}} {{/select}}
        </select>
        <div class="field">
            <input type="text" name="array.system.features.{{@index}}.name.qualifier" value="{{ this.name.qualifier }}" data-dtype="String" {{ disabled (or (eq this.selection_type "this_weapon") (eq this.name.compare "none")) }} />
        </div>
    </div>
    <div class="field-2">
        <div class="placeholder"></div>
        <select name="array.system.features.{{@index}}.specialization.compare">
            {{#select this.specialization.compare}}
            {{#if (eq this.selection_type "weapons_with_required_skill") }}
                {{#each @root.config.select.string_criteria as |v k| }}
                    <option value="{{ k }}">{{ localize "gurps.field_prefix.specialization" }} {{ localize v }}</option>
                {{/each}} {{ else }}
                {{#each @root.config.select.string_criteria as |v k| }}
                    <option value="{{ k }}">{{ localize "gurps.field_prefix.usage" }} {{ localize v }}</option>
                {{/each}}
            {{/if}} {{/select}}
        </select>
        <div class="field">
            <input type="text" name="array.system.features.{{@index}}.specialization.qualifier" value="{{ this.specialization.qualifier }}" data-dtype="String" {{ disabled (eq this.specialization.compare "none") }} />
        </div>
    </div>
    {{#unless (eq this.selection_type "this_weapon")}}
    <div class="field-2">
        <div class="placeholder"></div>
        <select name="array.system.features.{{@index}}.tags.compare">
            {{#select this.tags.compare}}
            {{#each @root.config.select.string_criteria as |v k| }}
                <option value="{{ k }}">{{ localize "gurps.field_prefix.tags" }} {{ localize v }}</option>
            {{/each}} {{/select}}
        </select>
        <div class="field">
            <input type="text" name="array.system.features.{{@index}}.tags.qualifier" value="{{ this.tags.qualifier }}" data-dtype="String" {{ disabled (eq this.tags.compare "none") }} />
        </div>
    </div>
{{/unless}}
{{#if (eq this.selection_type "weapons_with_required_skill") }}
    <div class="field-2">
        <div class="placeholder"></div>
        <select name="array.system.features.{{@index}}.level.compare">
            {{#select this.level.compare}}
            {{#each @root.config.select.numeric_criteria as |v k| }}
                <option value="{{ k }}">{{ localize "gurps.field_prefix.rsl" }} {{ localize v }}</option>
            {{/each}} {{/select}}
        </select>
        <div class="field">
            <input type="text" name="array.system.features.{{@index}}.level.qualifier" value="{{ this.level.qualifier }}" data-dtype="Number" {{ disabled (eq this.tags.compare "none") }} />
        </div>
    </div>
{{/if}}
</li>
