<div id="basic-damage">
	<header>
		{{ localize "gurps.character.basic_damage" }} {{#if settings.auto_damage.active}}
		<a
			class="fas fa-toggle-on"
			data-tooltip="{{ localize 'gurps.tooltip.auto_damage' }}"
			data-tooltip-direction="DOWN"
			data-action="toggle-damage"
		></a>
		{{ else }}
		<a
			class="fas fa-toggle-off"
			data-tooltip="{{ localize 'gurps.tooltip.auto_damage' }}"
			data-tooltip-direction="DOWN"
			data-action="toggle-damage"
		></a>
		{{/if}}
	</header>
	<div class="fieldblock-3" style="grid-template-columns: 0 0fr 1fr">
		<div class="points" readonly stlye=""></div>
		{{#if @root.editMode}}
		<div class="field">
			<input
				type="text"
				name="thrust"
				value="{{ actor.thrust.string }}"
				style="min-width: calc({{ length actor.thrust.string }}ch + 1ch)"
				data-dtype="String"
			/>
		</div>
		{{ else }}
		<div class="field rollable" data-type="damage" data-item-id="thrust">
			<input
				type="text"
				value="{{ actor.thrust.string }}"
				style="min-width: calc({{ length actor.thrust.string }}ch + 1ch)"
				disabled
			/>
		</div>
		{{/if}}
		<span>{{ localize "gurps.character.basic_thrust" }}</span>
		<div class="points" readonly></div>
		{{#if @root.editMode}}
		<div class="field">
			<input
				type="text"
				name="swing"
				value="{{ actor.swing.string }}"
				style="min-width: calc({{ length actor.swing.string }}ch + 1ch)"
				data-dtype="String"
			/>
		</div>
		{{ else }}
		<div class="field rollable" data-type="damage" data-item-id="swing">
			<input
				type="text"
				value="{{ actor.swing.string }}"
				style="min-width: calc({{ length actor.swing.string }}ch + 1ch)"
				type="text"
				disabled
			/>
		</div>
		{{/if}}
		<span>{{ localize "gurps.character.basic_swing" }}</span>
	</div>
</div>
