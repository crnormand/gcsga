<div id="description">
	<header>{{ localize "gurps.character.description" }}</header>
	<div class="content">
		<div class="fieldblock">
			<label>{{ localize "gurps.character.gender" }}</label>
			<div class="field">
				<input
					type="text"
					name="system.profile.gender"
					data-dtype="String"
					value="{{ system.profile.gender }}"
					disabled
					(not
					@root.editMode)
					}}
				/>
			</div>
			<label>{{ localize "gurps.character.age" }}</label>
			<div class="field">
				<input
					type="text"
					name="system.profile.age"
					data-dtype="String"
					value="{{ system.profile.age }}"
					{{
					disabled
					(not
					@root.editMode)
					}}
				/>
			</div>
			<label>{{ localize "gurps.character.birthday" }}</label>
			<div class="field">
				<input
					type="text"
					name="system.profile.birthday"
					data-dtype="String"
					value="{{ system.profile.birthday }}"
					{{
					disabled
					(not
					@root.editMode)
					}}
				/>
			</div>
			<label>{{ localize "gurps.character.religion" }}</label>
			<div class="field">
				<input
					type="text"
					name="system.profile.religion"
					data-dtype="String"
					value="{{ system.profile.religion }}"
					{{
					disabled
					(not
					@root.editMode)
					}}
				/>
			</div>
		</div>
		<div class="fieldblock">
			<label>{{ localize "gurps.character.height" }}</label>
			<div class="field">
				<input
					type="text"
					name="system.profile.height"
					data-dtype="String"
					value="{{ height }}"
					{{
					disabled
					(not
					@root.editMode)
					}}
				/>
			</div>
			<label>{{ localize "gurps.character.weight" }}</label>
			<div class="field">
				<input
					type="text"
					name="system.profile.weight"
					data-dtype="String"
					value="{{ weight }}"
					{{
					disabled
					(not
					@root.editMode)
					}}
				/>
			</div>
			<label>{{ localize "gurps.character.sm" }}</label>
			{{#if @root.editMode}}
			<div
				class="field"
				data-type="modifier"
				data-comment="{{ localize 'gurps.modifier.size.size' size=(signed actor.adjustedSizeModifier) }}"
				data-modifier="{{ system.profile.SM }}"
			>
				<input type="text" value="{{ signed actor.adjustedSizeModifier }}" />
			</div>
			{{ else }}
			<div
				class="field rollable"
				data-type="modifier"
				data-comment="{{ localize 'gurps.modifier.size.size' size=(signed actor.adjustedSizeModifier) }}"
				data-modifier="{{ system.profile.SM }}"
			>
				<input
					type="text"
					name="system.profile.SM"
					data-dtype="Number"
					value="{{ signed actor.adjustedSizeModifier }}"
					disabled
				/>
			</div>
			{{/if}}
			<label>{{ localize "gurps.character.tech_level" }}</label>
			<div class="field">
				<input
					type="text"
					name="system.profile.tech_level"
					data-dtype="String"
					value="{{ system.profile.tech_level }}"
					{{
					disabled
					(not
					@root.editMode)
					}}
				/>
			</div>
		</div>
		<div class="fieldblock">
			<label>{{ localize "gurps.character.hair" }}</label>
			<div class="field">
				<input
					type="text"
					name="system.profile.hair"
					data-dtype="String"
					value="{{ system.profile.hair }}"
					{{
					disabled
					(not
					@root.editMode)
					}}
				/>
			</div>
			<label>{{ localize "gurps.character.eyes" }}</label>
			<div class="field">
				<input
					type="text"
					name="system.profile.eyes"
					data-dtype="String"
					value="{{ system.profile.eyes }}"
					{{
					disabled
					(not
					@root.editMode)
					}}
				/>
			</div>
			<label>{{ localize "gurps.character.skin" }}</label>
			<div class="field">
				<input
					type="text"
					name="system.profile.skin"
					data-dtype="String"
					value="{{ system.profile.skin }}"
					{{
					disabled
					(not
					@root.editMode)
					}}
				/>
			</div>
			<label>{{ localize "gurps.character.handedness" }}</label>
			<div class="field">
				<input
					type="text"
					name="system.profile.handedness"
					data-dtype="String"
					value="{{ system.profile.handedness }}"
					{{
					disabled
					(not
					@root.editMode)
					}}
				/>
			</div>
		</div>
	</div>
</div>
